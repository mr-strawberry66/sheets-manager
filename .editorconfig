root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2 
charset = utf-8

[*.{py,rst,txt,cs,js,html}]
trim_trailing_whitespace = true
indent_size = 4 

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4 
